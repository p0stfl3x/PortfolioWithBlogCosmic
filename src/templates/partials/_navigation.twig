{% set navigation = { './index.html': 'Home', './about.html': 'About', './works.html': 'Works', './blog.html': 'Blog', './contact.html': 'Contact'  } %}

<nav class="navigation">
  <ul>
    {% for url, name in navigation %}
      <li
        {% if name == page %}
          class="navigation__link_active"
        {% endif %}
      >
        <a class="link navigation__link" href="{{ url }}">{{ name }}</a>
      </li>
    {% endfor %}
  </ul>
</nav>
