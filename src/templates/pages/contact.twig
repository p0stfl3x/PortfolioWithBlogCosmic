{% extends '../layouts/_base.twig' %}

{% set page = 'Contact' %}

{% block title %}Contact{% endblock %}

{% block content %}
  <section class="contact">
    <div class="contact__header">
      <h1 class="contact__title h2">Contact Us</h1>
      
      <p class="contact__description p4">
        If you need our help with your user account, have questions about how to use the platform or are experiencing technical difficulties, please do not hesitate to contact us.
      </p>
    </div>
     
    <div class="contact__body">
      <div class="contact__info">
        <h2 class="contact__info-heading h3">Contact information</h2>
        
        <ul class="contact__methods">
          <li class="contact__method"><a href="#">486 Rahi street, Berlin .98<br>Germany</a></li>
          <li class="contact__method"><a href="#"><i class="fa-solid fa-phone"></i> +48 601 366 816</a></li>
          <li class="contact__method"><a href="#"><i class="fa-solid fa-envelope"></i> company@support.com</a></li>
        </ul>
      
        <h2 class="contact__info-heading h3">Follow Us</h2>
        
        <ul class="contact__social-links social-links">
          <li class="social-links__item"><a href="#"><i class="fa-brands fa-facebook-f"></i></a></li>         
          <li class="social-links__item"><a href="#"><i class="fa-brands fa-twitter"></i></a></li>         
          <li class="social-links__item"><a href="#"><i class="fa-brands fa-linkedin-in"></i></a></li>         
          <li class="social-links__item"><a href="#"><i class="fa-brands fa-dribbble"></i></a></li>
        </ul>
      </div>
      
      <form class="contact__form form" action="">
        <div class="contact__form-item form__item">
          <label class="form__item-label" for="fname">Name*</label>
          <input class="" type="text" id="fname" name="fname" placeholder="Walter Moss">
        </div>
        
        <div class="contact__form-item form__item">
          <label class="form__item-label" for="femail">Email*</label>
          <input class="" type="email" id="femail" name="femail" placeholder="Info@manifest.com">
        </div>
        
        <div class="contact__form-item form__item">
          <select class="select" name="categories" id="fcategories" required>
            <option value="reason_for_contact" selected hidden>Reason For Contact</option>
            <option value="partnership">Partnership</option>
            <option value="service_order">Service Order</option>
            <option value="gratitude">Gratitude</option>
            <option value="complaint">Complaint</option>
          </select>
        </div>

        <div class="contact__form-item form__item">
          <label class="form__item-label" for="fmessage">Message*</label>
          <input class="" type="text" id="fmessage" name="fmessage" placeholder="Hi there ...">
        </div>
        
        <div>
          <a class="button button_arrow" href="#">Send &nbsp;<span class="material-symbols-outlined icon-arrow icon-arrow_right-button">trending_flat</span></a>
        </div>
      </form>
    </div>
  </section>
{% endblock %}